<% if list.errors.any? %>
  <p><%= list.errors.count %> 件のエラーが発生しました</p>
  <ul>
    <% list.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: list do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <%= f.submit %>
<% end %>