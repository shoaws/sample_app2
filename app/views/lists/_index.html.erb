<table>
  <thead>
    <tr>
      <th>
        タイトル
      </th>
      <th>
        内容
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% lists.each do |list| %>
      <tr>
        <td>
          <%= list.title %>
        </td>
        <td>
          <%= list.body %>
        </td>
        <td>
          <%= link_to 'show', list_path(list.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>